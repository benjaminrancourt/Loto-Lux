{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "system",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "dist/client/app",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "client/app/**/*.ts",
    "client/typings/*.d.ts"
  ]
}